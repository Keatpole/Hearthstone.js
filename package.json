{
  "name": "hearthstone.js",
  "version": "2.0.0-beta.1",
  "description": "A console-based recreation of Hearthstone made in NodeJS",
  "exports": "./index.ts",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "start": "npm config set engine-strict true && node ./dist/index.js",
    "docs": "typedoc ./",
    "script:vanilla:generator": "node ./dist/scripts/vanillacards/generator",
    "script:vanilla:propfinder": "node ./dist/scripts/vanillacards/propfinder",
    "script:breakingchange": "node ./dist/scripts/breakingchange.js",
    "script:cardupdater": "node ./dist/scripts/cardupdater.js",
    "script:crashtest": "node ./dist/scripts/crashtest.js",
    "script:idscript": "node ./dist/scripts/idscript.js",
    "script:upgradecards": "node ./dist/scripts/upgradecards.js",
    "script:testcards": "node ./dist/scripts/testcards.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LunarTides/Hearthstone.js.git"
  },
  "author": "LunarTides",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "axios": "^1.5.0",
    "chalk": "^5.3.0",
    "deckstrings": "^3.1.1",
    "lodash": "^4.17.21",
    "readline-sync": "^1.4.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.7.0",
    "@types/readline-sync": "^1.4.4",
    "@types/uuid": "^9.0.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": ">=7.0.0"
  }
}
