    "strip-ansi": "^7.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.4",
    "@types/readline-sync": "^1.4.5",
    "@types/uuid": "^9.0.5",
    "typescript": "^5.2.2"
