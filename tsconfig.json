{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "checkJs": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}